


<h1><%= pluralize(@articles.count, 'Article') %> waiting for you</h1>
<p>
    <%= @time %>
</p>

<ul>
    <% @articles.each do |article|%>
    <li>
        <%= link_to article.title, article_path(article) %>
    </li>
    <% end %>
<ul>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Importance</th>
  </tr>
  <% @articles.each do |article|%>
  <tr style="background-color:<%= cycle("grey", "black") %>">
    <td><%= link_to article.title, article_path(article) %></td>
    <%# truncate(article.body, length: 10, omission: '... (TBC)') %>
    <td style="color:<%= cycle("red", "green", "blue", name: "colors")%>"><%= truncate(article.body, length: 15, omission: '... (TBC)') %></td>
    <td><%= article.importance %></td>
  </tr>
    <% end %>
</table>